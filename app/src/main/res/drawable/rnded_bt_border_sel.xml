<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle" >
            <gradient android:angle="270"
                android:centerY="90%"
                android:startColor="@color/white_colors"
                android:centerColor="@color/login_text_color"
                android:endColor="@color/login_text_color"/>
            <stroke android:width="1dp" android:color="@color/colorPrimaryDark"/>
            <corners android:radius="@dimen/margin_small"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <gradient android:angle="90"
                android:centerY="90%"
                android:startColor="@color/white_colors"
                android:centerColor="@color/login_text_color"
                android:endColor="@color/login_text_color"/>
            <stroke android:width="2dp" android:color="@color/login_text_color"/>
            <corners android:radius="@dimen/margin_small"/>
        </shape>
    </item>

</selector>