<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="card_maintxt_label">
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:textColor">@color/deep_blue_grey</item>
        <item name="android:textSize">@dimen/card_mainlbl_txtsize</item>
    </style>

    <style name="dash_counting_text">
        <item name="android:layout_marginEnd">@dimen/margin_med</item>
        <item name="android:background">@drawable/landing_page_background_count</item>
        <item name="android:textColor">@color/blue_black</item>
        <item name="android:textSize">@dimen/card_mainlbl_txtsize</item>
        <item name="android:padding">@dimen/margin_small</item>
    </style>

    <style name="dashboard_lbl">
        <item name="android:textColor">@color/blue_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="buttons_style">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@drawable/rnded_bt_border_sel</item>
    </style>

    <style name="input_border_styles">
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/rounded_input_borders</item>
    </style>

    <style name="edittor_style">
        <item name="android:ems">10</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <dimen name="button_textSize">16sp</dimen>
</resources>
