<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sidebar_header"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@drawable/material_bg_1"
    android:orientation="vertical"
    android:padding="@dimen/activity_padding"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/header_avatarpic"
        android:layout_width="@dimen/avatar_dim"
        android:layout_height="@dimen/avatar_dim"
        android:layout_margin="@dimen/margin_small"
        android:src="@drawable/generic_avatar"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/header_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_med"
        android:layout_marginBottom="@dimen/margin_tiny"
        android:text="UNKNOWN USER"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintBottom_toTopOf="@id/header_usernumber"
         />

    <TextView
        android:id="@+id/header_usernumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:text="UNKNOWN NUMBER"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        app:layout_constraintTop_toTopOf="@id/header_bt_logout"
        app:layout_constraintBottom_toBottomOf="@id/header_bt_logout"
        android:text="@string/logout"
        android:textColor="@color/wine_red"
        android:layout_marginEnd="@dimen/margin_tiny"
        app:layout_constraintRight_toLeftOf="@id/header_bt_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/header_bt_logout"
        android:padding="@dimen/margin_tiny"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/ic_power_settings_new_black_24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/normal_text_size"
        android:layout_width="25dp"
        android:layout_height="25dp" />


    <TextView
        app:layout_constraintTop_toTopOf="@id/header_bt_profile"
        app:layout_constraintBottom_toBottomOf="@id/header_bt_profile"
        android:text="@string/profile"
        android:textColor="@color/login_text_color"
        android:layout_marginEnd="@dimen/margin_tiny"
        app:layout_constraintRight_toLeftOf="@id/header_bt_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginBottom="@dimen/margin_small"
        app:layout_constraintBottom_toTopOf="@id/header_bt_logout"
        android:id="@+id/header_bt_profile"
        android:padding="@dimen/margin_tiny"

        android:background="@drawable/ic_person_black_24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/normal_text_size"
        android:layout_width="25dp"
        android:layout_height="25dp" />

</android.support.constraint.ConstraintLayout>