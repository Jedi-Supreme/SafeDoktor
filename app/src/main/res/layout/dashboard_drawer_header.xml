<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sidebar_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/deep_blue_grey"
    android:orientation="vertical"
    android:padding="@dimen/activity_padding">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dash_header_avatarpic"
        android:layout_width="@dimen/avatar_dim"
        android:layout_height="@dimen/avatar_dim"
        android:src="@drawable/generic_avatar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        app:layout_constraintLeft_toLeftOf="@id/dash_header_avatarpic"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintTop_toBottomOf="@id/dash_header_avatarpic"
        android:id="@+id/dash_header_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/developer_name"
        android:textStyle="bold"
         />

    <TextView
        app:layout_constraintLeft_toLeftOf="@id/dash_header_fullname"
        android:layout_marginTop="@dimen/margin_tiny"
        app:layout_constraintTop_toBottomOf="@id/dash_header_fullname"
        android:id="@+id/dash_header_usernumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/developer_full_number"
        android:textStyle="bold"
         />

</android.support.constraint.ConstraintLayout>