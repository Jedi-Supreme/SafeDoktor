<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/margin_tiny"
    app:cardElevation="@dimen/margin_tiny"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/margin_large"
            android:layout_height="@dimen/margin_large"
            android:layout_marginStart="@dimen/margin_small"
            android:contentDescription="@string/nchs_logo"
            android:scaleType="fitCenter"
            android:src="@drawable/nchs_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_dep_fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_tiny"
            android:text="Jedidiah Assisi"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/large_text"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_deprow_dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_tiny"
            android:text="14-May-2020"
            android:textColor="@color/grey_200"
            android:textSize="@dimen/normal_text_size"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@id/tv_dep_fullname"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_dep_fullname" />

        <TextView

            android:textAlignment="center"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/tv_dep_opdID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_tiny"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:text="EP002-0004007-20"
            android:textSize="@dimen/largest_text"
            app:layout_constraintTop_toBottomOf="@id/tv_dep_fullname" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>