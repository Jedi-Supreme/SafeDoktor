<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:padding="@dimen/activity_padding"
    android:id="@+id/const_verify_parentview"
    tools:context=".activities.VerificationActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/card_verify_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/margin_tiny"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toTopOf="@id/tv_verify_dwntime"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:text="@string/phone_valid_intro"
            android:textAlignment="center" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_verify_dwntime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_tiny"
        android:text="@string/resend_code_in"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/card_inputcode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_inputcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/margin_tiny"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--Verification Code-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_verify_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:padding="@dimen/margin_med">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_verify_code"
                style="@style/edittor_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/verifyCode"
                android:inputType="textCapCharacters" />

        </android.support.design.widget.TextInputLayout>
        <!--Verification Code-->

    </android.support.v7.widget.CardView>

    <ProgressBar
        android:id="@+id/probar_verify_code"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/card_inputcode" />

    <Button
        android:id="@+id/bt_verifycode"
        style="@style/buttons_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:onClick="VerifyCodeRecieved"
        android:text="@string/verify"
        app:layout_constraintTop_toBottomOf="@id/probar_verify_code" />

    <TextView
        android:id="@+id/tv_verify_resend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:clickable="true"
        android:enabled="false"
        android:focusable="true"
        android:onClick="ResendCode"
        android:text="@string/resend_code"
        android:textAlignment="center"
        android:textSize="@dimen/med_text_size"
        app:layout_constraintTop_toBottomOf="@id/bt_verifycode" />

</android.support.constraint.ConstraintLayout>