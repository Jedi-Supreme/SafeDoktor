<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.softedge.safedoktor">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.ApptMake_Activity" />
        <activity
            android:name=".activities.Appointments"
            android:label="@string/appointments_txt"
            android:screenOrientation="portrait"
            android:theme="@style/contacts_style" />
        <activity
            android:name=".activities.ContactsActivity"
            android:label="@string/contact_persons"
            android:screenOrientation="portrait"
            android:theme="@style/contacts_style" />
        <activity
            android:name=".activities.BiographyActivity"
            android:label="@string/biography"
            android:screenOrientation="portrait"
            android:theme="@style/biotheme"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.MedicalHistoryActivity"
            android:label="@string/medical_history"
            android:screenOrientation="portrait"
            android:theme="@style/contacts_style"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.AccountActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ProfileActivity"
            android:label="@string/edit_profile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/settings_txt"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.WelcomeActvity"
            android:label="@string/dash_welcome"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activities.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/logintheme"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.SignupActivity"
            android:screenOrientation="portrait"
            android:theme="@style/logintheme"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.VerificationActivity"
            android:label="@string/verifyCode"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.DashboardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
    </application>

</manifest>